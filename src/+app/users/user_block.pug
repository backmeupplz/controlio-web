div.user-block.menu-block.in-flex(*ngIf="user")
  div.in-flex.info.hidden-xs((click)="menuCenter.openMenuOrClose(menuCenter.MENU.UserMenu)")
    img.icon(src="assets/arrow-drop-down.svg")
    p.text-label {{ user.name || user.email }}
  div.thumbnail
    imgb.col-xs-2-15.photo([key]="user.photo", (click)="menuCenter.openMenuOrClose(menuCenter.MENU.UserMenu)", styles="ng-thumb")
  user-drop-down-list([event]="event", [open]="menuCenter.isOpenMenu(menuCenter.MENU.UserMenu)", (closedChange)="menuCenter.closeMenu($event)", [data]="user")
