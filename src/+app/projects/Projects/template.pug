div.container
  search((valueChange)="onSearch($event)")
link-invite-block(*ngIf="!loading && invites" [invites]="invites")
empty-data-set(*ngIf="(projects == null || projects.length <= 0) && (invites == null || invites.length <= 0)", [loading]="loading", [title]="title", [error]="error")
div.project-list(*ngIf="projects != null && projects.length > 0", [infiniteScrollDistance]="2", [infiniteScrollThrottle]="300", (scrolled)="onScroll()", infinite-scroll)
  project-list-elem(*ngFor="let project of projects", [title]="project.title", [description]="project.description", subtitle="{{ (project.lastStatus) ? project.lastStatus.status : null }}", [imageKey]="project.image", [id]="project.id", [post]="project.lastPost || project.lastStatus", [manager]="project.manager", [date]="project.date",  [owner]="project.owner", [isOpenSettings]="false")
