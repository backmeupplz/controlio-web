div.center-block.you-dont-have-project(*ngIf="projects == null || projects.length <= 0")
  h1.text(*ngIf="!loading") {{ title }}
  h1.text(*ngIf="loading") Loading...
div.project-list(*ngIf="projects != null && projects.length > 0")
  project-list-elem(*ngFor="let project of projects", [title]="project.title", [description]="project.description", subtitle="{{ (project.lastStatus) ? project.lastStatus.status : null }}", [image]="project.image", [id]="project.id", [post]="project.lastPost || project.lastStatus", [manager]="project.manager", [date]="project.date", [isOpenSettings]="false")
